<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Widgets</h3>
    </div>
    <div class="panel-body">

      <table class="table table-hover">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Version</th>
          <th>Config file path</th>
          <th>Database</th>
          <th>Collection</th>
          <th>Last run at</th>
          <th>Run interval</th>
          <th>Last run at</th>
          <th>Is disable</th>
          <th>Url</th>
          <th>User</th>
          <th></th>
          <th></th>
        </tr>

      <% @widgets.each do |widget| %>
        <tr>
          <td><%= link_to widget.name, widget %></td>
          <td><%= widget.description %></td>
          <td><%= widget.version %></td>
          <td><%= widget.config_file_path %></td>
          <td><%= widget.database %></td>
          <td><%= widget.collection %></td>
          <td><%= widget.last_run_at %></td>
          <td><%= widget.run_interval %></td>
          <td><%= widget.last_run_at %></td>
          <td><%= widget.is_disable %></td>
          <td><%= widget.url %></td>
          <td><%= widget.user_id %></td>
          <td><%= link_to 'Edit', edit_widget_path(widget) %></td>
          <td><%= link_to 'Destroy', widget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </table>

      <br />

      <%= link_to 'New Widget', new_widget_path, :class => "btn btn-default" %>
      <%= link_to 'Run Widgets', run_widgets_path, :class => "btn btn-default" %>

    </div>
  </div><!-- end div.panel -->
</div><!-- end div.row-->

