<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Widgets</h3>
    </div>
    <div class="panel-body">

      <table class="table table-hover">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Last run at</th>
          <th>Run interval</th>
          <th>Is disable</th>
          <th></th>
          <th></th>
        </tr>

      <% @widgets.each do |widget| %>
        <tr>
          <td><%= link_to widget.name, widget %></td>
          <td><%= widget.description %></td>
          <td><%= widget.last_run_at %></td>
          <td><%= widget.run_interval %></td>
          <td><%= widget.is_disable %></td>
          <td><%= link_to 'Edit', edit_widget_path(widget) %></td>
          <td><%= link_to 'Delete', widget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </table>

      <%= paginate @widgets %>
      <br />

      <%= link_to 'New Widget', new_widget_path, :class => "btn btn-default" %>
      <%= link_to 'Run Widgets', run_widgets_path, :class => "btn btn-default" %>

    </div>
  </div><!-- end div.panel -->
</div><!-- end div.row-->

