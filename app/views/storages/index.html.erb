<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Storages</h3>
    </div>
    <div class="panel-body">

      <table class="table table-hover">
        <tr>
          <th>filename</th>
          <th>size</th>
          <th>type</th>
          <th>device_id</th>
          <th>status</th>
          <th>created_at</th>
          <th></th>
        </tr>

      <% @storages.each do |storage| %>
        <tr>
          <td><%= link_to storage.file_file_name, storage %></td>
          <td><%= number_to_human_size(storage.file_file_size, precision: 2) %></td>
          <td><%= storage.file_type %></td>
          <td><%= storage.device_id %></td>
          <td><%= storage.status %></td>
          <td><%= storage.created_at %></td>
          <td><%= link_to 'Delete', storage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </table>

      <%= paginate @storages %>
      <br />

      <!--%= link_to 'New Storage', new_storage_path %-->

      <%= link_to 'Upload files', show_upload_storages_path, :class=> "btn btn-default" %>

 
    
    </div>
  </div><!-- end div.panel -->
</div><!-- end div.row-->




